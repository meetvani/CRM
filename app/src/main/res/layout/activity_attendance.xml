    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="10dp">

            <EditText
                android:id="@+id/search"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:hint="Search"
                android:layout_marginRight="5dp"
                android:drawableRight="@drawable/ic_baseline_search_24"
                android:background="@drawable/edittext_black_stroke_bg"
                android:padding="8dp"/>

            <Spinner
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/search"
                android:background="@drawable/bg_cardview"
                android:padding="8dp"
                android:entries="@array/Gender"/>

        </RelativeLayout>

        <androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="110dp"
            app:cardCornerRadius="30dp"
            android:id="@+id/cardview1"
            app:cardElevation="10dp"
            android:background="@drawable/bg_cardview"
            android:layout_margin="10dp"
            xmlns:app="http://schemas.android.com/apk/res-auto">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/bg_cardview"
                android:paddingLeft="30dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/nameemployee"
                    android:text="Name Of Employee"
                    android:layout_marginTop="10dp"
                    android:textSize="17sp"
                    android:textColor="@color/black"
                    android:textStyle="bold"/>


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/login_logout"
                    android:text="Designation"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:layout_marginTop="10dp"
                    android:layout_below="@id/nameemployee"/>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/login_logout"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginBottom="10dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/designationemployee"
                        android:text="Login &amp; Logout"
                        android:textColor="@color/black"

                        android:layout_below="@id/login_logout"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/date"
                        android:text="Date"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:textColor="@color/black"/>

                </RelativeLayout>



            </RelativeLayout>

        </androidx.cardview.widget.CardView>

